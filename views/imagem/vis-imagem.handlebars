<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Listar Imagens da Galeria</h2>
            </div>
        </div>

        {{>_msg}}

        <hr>

        <span class="d-none d-md-block">
            <a href="/imagem/edit-imagem" class="btn btn-outline-primary btn-sm">Inserir</a>
        </span>

        <div class="table-responsive">

            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <!--<th>ID</th>-->
                        <th>Nome</th>
                        <th class="d-none d-sm-table-cell">Local</th>
                        <th class="d-none d-lg-table-cell">url</th>
                        <th class="d-none d-lg-table-cell">Foto</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each imagens.docs}}
                    <tr>
                        <!--<th>{{_id}}</th>-->
                        <td>{{nome}}</td>
                        <td class="d-none d-sm-table-cell">{{local}}</td>
                        <td class="d-none d-lg-table-cell">{{url}}</td>

                        <td class="d-none d-lg-table-cell">
                            <dd> <img class="img-fluid ml-3" style="width: 25%;" src="{{url}}"> </dd>
                        </td>

                        <td class="text-center">
                           <!--
                            <span class="d-none d-md-block">
                                <a href="/imagem/edit-imagem/{{_id}}" class="btn btn-outline-primary btn-sm">Editar</a>
                            </span>
                            -->

                            <span class="d-none d-md-block">
                                <a href="/imagem/del-imagem/{{_id}}" class="btn btn-danger btn-sm">Apagar</a>
                            </span>

                            <div class="dropdown d-block d-md-none">
                                <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Ações
                                </button>
                               <!--
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                                    <a class="dropdown-item" href="/imagem/edit-imagem/{{_id}}">Editar</a>
                                </div>
                                -->

                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                                    <a class="dropdown-item" href="/imagem/del-imagem/{{_id}}">Apagar</a>
                                </div>
                            </div>
                        </td>

                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <nav aria-label="paginacao">
                <ul class="pagination pagination-sm justify-content-center">
                    {{#if imagens.hasPrevPage}}
                    <li class="page-item">
                        <a class="page-link" href="/imagem/list-imagem" tabindex="-1">Primeira</a>
                    </li>
                    <li class="page-item"><a class="page-link"
                            href="/imagem/list-imagem?page={{imagens.prevPage}}">{{imagens.prevPage}}</a></li>
                    {{else}}
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Primeira</a>
                    </li>
                    {{/if}}

                    <li class="page-item active">
                        <a class="page-link" href="#">{{imagens.page}}</a>
                    </li>

                    {{#if imagens.hasNextPage}}
                    <li class="page-item ">
                        <a class="page-link"
                            href="/imagem/list-imagem?page={{imagens.nextPage}}">{{imagens.nextPage}}</a>
                    </li>

                    <li class="page-item ">
                        <a class="page-link" href="/imagem/list-imagem?page={{imagens.totalPages}}">Proxima</a>
                    </li>
                    {{else}}
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Última</a>
                    </li>
                    {{/if}}
                </ul>
            </nav>

        </div>
    </div>
</div>