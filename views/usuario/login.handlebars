<form class="form-signin text-center"  action="/usuario/login" method="POST">
   
    <img class="mb-4" src="/images/perfil.jpeg" alt="Celke" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal">Área Restrita</h1>
 
    {{>_msg}}
    <div class="form-group">
        <input name="email" type="text" style="text-transform: lowercase;" class="form-control" placeholder="Digite seu E-mail" required>
    </div>
    <div class="form-group">
        <input name="senha" type="password" class="form-control" placeholder="Digite sua Senha" required>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Acessar</button>
    <a class="text-center" href="/usuario/signup" style="text-decoration: none;">Professor Não tem cadastro? Cadastre Aqui!</a>

</form>

