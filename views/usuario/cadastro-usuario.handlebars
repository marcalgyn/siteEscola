<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Cadastro de Usuario</h2>
            </div>
            <div class="p-2">
                <span class=" d-md-block">
                    <a href="/usuario/vis-usuario" class="btn btn-outline-primary btn-sm">Listar</a>
                </span>
                <div class="dropdown d-block d-md-none">
                    <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Ações
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                        <a class="dropdown-item" href="/usuario/vis-usuario">Listar</a>
                    </div>
                </div>
            </div>
        </div>
        {{>_msg}}
        <hr>
        <form method="POST" action="/usuario/insert-cad-usuario">
            <input name="_id" type="hidden" value="{{usuario._id}}">

            <div class="form-row">
                <div class="form-group col-md-4">
                    <label><span class="text-danger">*</span> Nome:</label>
                    <input name="nome" type="text" class="form-control" id="nome" value="{{usuario.nome}}"
                        placeholder="Nome" required>
                </div>

                <div class="form-group col-md-2">
                    <label><span class="text-danger">*</span> Serie:</label>
                    <input name="serie" type="text" class="form-control" id="serie" value="{{usuario.serie}}"
                        placeholder="Serie" required>
                </div>

                <div class="form-group col-md-4">
                    <label><span class="text-danger">*</span> E-mail:</label>
                    <input name="email" type="text" class="form-control" id="email" placeholder="E-mail"
                        value="{{usuario.email}}" required>
                </div>

                <div class="form-row col-md-10">
                    <div class="form-group col-md-2">
                        <label><span class="text-danger">*</span> Usuario:</label>
                        <select name="tipoUsuario" class="custom-select">
                            {{#if (eq usuarios.tipoUsuario 'A')}}
                            <option value="A">Aluno</option>
                            <option value="P">Professor</option>
                            {{else}}
                            <option value="P">Professor</option>
                            {{/if}}
                        </select>
                    </div>

                    <div class="form-group col-md-3">
                        <label><span class="text-danger">*</span> Senha:</label>
                        <input name="senha" type="password" class="form-control" id="senha" placeholder="Senha"
                             required>
                    </div>

                    <div class="form-group col-md-2">
                        <label><span class="text-danger"></span> Status:  </label>
                        <br>
                        <label>{{#if (eq usuario.estatus true) }}
                                 <label style="color:chartreuse;">ATIVO </label> 
                                 {{else}}
                                   <label style="color: brown;">INATIVO </label> 
                                 {{/if}}
                        </label>
                    </div>

                </div>
            </div>

            <p>
                <span class="text-danger">* </span>Campo obrigatório

            </p>
            <button type="submit" class="btn btn-warning">Salvar</button>
        </form>
    </div>
</div>