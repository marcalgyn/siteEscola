<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Editar Video do Topo</h2>
            </div>
            <div class="p-2">
                <span class="d-none d-md-block">
                    <a href="/vis-home-video" class="btn btn-outline-primary btn-sm">Visualizar</a>
                </span>
                <div class="dropdown d-block d-md-none">
                    <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Ações
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                        <a class="dropdown-item" href="/vis-home-video">Visualizar</a>
                    </div>
                </div>
            </div>
        </div>
        {{>_msg}}
        <hr>
        <form method="POST" action="/update-home-video" >
            <input name="_id" type="hidden" value="{{video._id}}">
            
            <div class="form-group">
                <label><span class="text-danger">*</span> Titulo:</label>
                <input name="titulo" type="text" class="form-control" id="titulo" value="{{video.titulo}}" placeholder="Titulo do Video" required >
            </div>

            <div class="form-group">
                <label><span class="text-danger">*</span> SubTitulo:</label>
                <input name="subtitulo" type="text" class="form-control" id="subtitulo" value="{{video.subtitulo}}" placeholder="SubTitulo do Video" required >
            </div>

            <div class="form-group">
                <label><span class="text-danger">*</span> Embed do Video:</label>
                <textarea name="urlvideo" class="form-control" id="urlvideo"
                    placeholder="Embed Video" rows="3">{{video.urlvideo}}</textarea>
            </div>

            <p>
                <span class="text-danger">* </span>Campo obrigatório
            </p>
            <button type="submit" class="btn btn-warning">Salvar</button>
        </form>
    </div>
</div>