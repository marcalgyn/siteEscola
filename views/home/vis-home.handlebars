<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Home</h2>
            </div>

            <div class="p-2">
                <span class="d-none d-md-block">
                    <a href="/edit-home" class="btn btn-outline-warning btn-sm">Editar</a>
                    <a href="/edit-home-logo" class="btn btn-outline-warning btn-sm">Editar Logo</a>
                    <a href="/edit-home-img" class="btn btn-outline-warning btn-sm">Editar Banner</a>
                    
                </span>
                <div class="dropdown d-block d-md-none">
                    <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Ações
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                        <a class="dropdown-item" href="/edit-home">Editar</a>
                        <a href="/edit-home-logo" class="btn btn-outline-warning btn-sm">Editar Logo</a>
                        <a href="/edit-home-img" class="btn btn-outline-warning btn-sm">Editar Banner</a>
                    </div>
                </div>
            </div>
        </div>
        {{>_msg}}
        <hr>
        <dl class="row">
            <dt class="col-sm-3">ID:</dt>
            <dd class="col-sm-9">{{hometopo._id}}</dd>

            <dt class="col-sm-3">Titulo do Topo:</dt>
            <dd class="col-sm-9">{{hometopo.titulo}} </dd>

            <dt class="col-sm-3">Sub-Titulo:</dt>
            <dd class="col-sm-9 mb-4">{{hometopo.subtitulo}} </dd>

            <dt class="col-sm-3">Titulo do Botão:</dt>
            <dd class="col-sm-9">{{hometopo.titulobtn}}</dd>

            <dt class="col-sm-3">Logo Marca:</dt>
            <dd class="col-sm-9"><a href="images/logo.jpg"><img src="images/logo.jpg" style="width: 130px; heigth:60px"> </a> </dd>

            <dt class="col-sm-3">Url Botão:</dt>
            <dd class="col-sm-9">{{hometopo.urllogo}}</dd>


            <dt class="col-sm-3">Imagem de Fundo:</dt>
            <dd class="col-sm-9"><img class="img-fluid ml-3" style="width: 55%;"
                    src="images/topo_home/home-top.jpg"> </dd>
        </dl>
    </div>
</div>