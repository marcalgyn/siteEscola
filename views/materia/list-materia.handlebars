<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Listar Materias</h2>
            </div>
        </div>
        <hr>


        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <!--<th>ID</th>-->
                        <th>Matéria</th>
                        <th class="d-none d-sm-table-cell">Nome Professor</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each materia.docs}}
                    <tr>
                        <!--<th>{{_id}}</th>-->
                        <td>{{nome}}</td>
                        <td class="d-none d-sm-table-cell">{{professor}}-{{cor}}</td>
                        <td class="text-center">
                            <span class="d-none d-md-block">
                                <a href="vis-materia/{{_id}}" class="btn btn-outline-primary btn-sm">Visualizar</a>
                            </span>
                            <div class="dropdown d-block d-md-none">
                                <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Ações
                                </button>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                                    <a class="dropdown-item" href="vis-materia/{{_id}}">Visualizar</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <nav aria-label="paginacao">
                <ul class="pagination pagination-sm justify-content-center">
                    {{#if materia.hasPrevPage}}
                    <li class="page-item">
                        <a class="page-link" href="/materia/list-materia" tabindex="-1">Primeira</a>
                    </li>
                    <li class="page-item"><a class="page-link"
                            href="/materia/list-materia?page={{materia.prevPage}}">{{materia.prevPage}}</a></li>
                    {{else}}
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Primeira</a>
                    </li>
                    {{/if}}

                    <li class="page-item active">
                        <a class="page-link" href="#">{{materia.page}}</a>
                    </li>

                    {{#if materia.hasNextPage}}
                    <li class="page-item ">
                        <a class="page-link" href="/materia/list-materia?page={{materia.nextPage}}">{{materia.nextPage}}</a>
                    </li>

                    <li class="page-item ">
                        <a class="page-link" href="/materia/list-materia?page={{materia.totalPages}}">Proxima</a>
                    </li>
                    {{else}}
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Última</a>
                    </li>
                    {{/if}}
                </ul>
            </nav>

        </div>
    </div>
</div>