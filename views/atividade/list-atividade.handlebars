<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Listar Atividades</h2>
            </div>
        </div>
        <hr>


        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <!--<th>ID</th>-->
                        <th>Matéria</th>
                        <th class="d-none d-sm-table-cell">Conteudo</th>
                        <th class="d-none d-sm-table-cell">Nome Professor</th>
                        <th class="d-none d-sm-table-cell">Data Atividade</th>
                        <th class="d-none d-sm-table-cell">Paginas</th>
                        <th class="text-center">Ações</th>
                     
                    </tr>
                </thead>
                <tbody>
                    
                    {{#each atividade.docs}}
                    
                    <tr>
                        <!--<th>{{_id}}</th>-->
                        <td>{{materia}}</td>
                        <td class="d-none d-sm-table-cell">{{conteudo}}</td>
                        <td class="d-none d-sm-table-cell">{{nomeProfessor}}</td>
                        <td class="d-none d-sm-table-cell">{{moment dataAtividade "DD/MM/YYYY"}}</td>
                        <td class="d-none d-sm-table-cell">{{paginaInicial}}/{{paginaFinal}}</td>
                        <td class="text-center">
                            <span class="d-none d-md-block">
                                <a href="/atividade/vis-atividade/{{_id}}" class="btn btn-outline-primary btn-sm">Visualizar</a>
                                <a href="/atividade/del-atividade/{{_id}}" class="btn btn-outline-danger btn-sm">Excluir</a>
                            </span>
                            <div class="dropdown d-block d-md-none">
                                <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Ações
                                </button>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                                    <a class="dropdown-item" href="atividade/vis-atividade/{{_id}}">Visualizar</a>
                                    <a href="/atividade/del-atividade/{{_id}}" class="btn btn-outline-danger btn-sm">Excluir</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <nav aria-label="paginacao">
                <ul class="pagination pagination-sm justify-content-center">
                    {{#if atividade.hasPrevPage}}
                    <li class="page-item">
                        <a class="page-link" href="/atividade/list-atividade" tabindex="-1">Primeira</a>
                    </li>
                    <li class="page-item"><a class="page-link"
                            href="/atividade/list-atividade?page={{atividade.prevPage}}">{{atividade.prevPage}}</a></li>
                    {{else}}
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Primeira</a>
                    </li>
                    {{/if}}

                    <li class="page-item active">
                        <a class="page-link" href="#">{{atividade.page}}</a>
                    </li>

                    {{#if atividade.hasNextPage}}
                    <li class="page-item ">
                        <a class="page-link" href="/atividade/list-atividade?page={{atividade.nextPage}}">{{atividade.nextPage}}</a>
                    </li>

                    <li class="page-item ">
                        <a class="page-link" href="/atividade/list-atividade?page={{atividade.totalPages}}">Proxima</a>
                    </li>
                    {{else}}
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Última</a>
                    </li>
                    {{/if}}
                </ul>
            </nav>

        </div>
    </div>
</div>