<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Inserir Documentos</h2>
            </div>
            <div class="p-2">
                <span class="d-none d-md-block">
                    <a href="/listagem/list-listagem" class="btn btn-outline-primary btn-sm">Visualizar</a>
                </span>
                <div class="dropdown d-block d-md-none">
                    <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Ações
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                        <a class="dropdown-item" href="/listagem/vis-listagem">Visualizar</a>
                    </div>
                </div>
            </div>
        </div>
        {{>_msg}}
        <hr>
        <form method="POST" action="/listagem/add-imagem" enctype="multipart/form-data">
            <input name="_id" type="hidden" value="{{listagem._id}}">
            <input name="idAtividade" type="hidden" class="form-control" id="idAtividade" value={{idAtividade}}>

            <div class="form-group">
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label for="idAtividade">Materia</label>
                        <input name="materia" type="text" class="form-control" id="materia" value={{materia}}>
                        <input name="nomeProfessor" type="hidden" class="form-control" id="nomeProfessor" value={{nomeProfessor}}>
                        <input name="paginas" type="hidden" class="form-control" id="paginas" value={{paginas}}>
                    </div>
                    <div class="form-group col-md-2">
                        <label for="conteudo">Conteudo</label>
                        <input name="conteudo" type="text" class="form-control" id="conteudo" value={{conteudo}}>
                    </div>
                </div>

                <div class="form-group col-md-4">
                    <label><span class="text-danger">*</span> Documento(s):</label>
                    <input name="file" type="file" multiple class="form-control" id="file">
                </div>
            </div>

            <p>
                <span class="text-danger">* </span>Campo obrigatório

            </p>
            <button type="submit" class="btn btn-warning">Salvar</button>


        </form>
    </div>
</div>