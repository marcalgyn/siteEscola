<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-5 sub-titulo">Lista de Tarefas do Aluno {{nomeAluno}}</h2>
            </div>
        </div>

        {{>_msg}}

        <hr>
        {{#if (eq usuario.tipoUsuario 'A')}}
        <span class="d-none d-md-block">
            <a href="/atividade" class="btn btn-outline-primary btn-sm">Inserir</a>
        </span>
        {{/if}}

        <div class="card">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered">
                    <thead>
                        <tr>
                            <!--<th>ID</th>-->
                            <th>Professor</th>
                            
                            <th class="d-sm-table-cell">Conteudo</th>
                            <th class="d-lg-table-cell">Materia</th>
                            <th class="d-lg-table-cell">Paginas</th>
                            <th class="d-sm-table-cell">Data Inclusão</th>
                            <th class="d-sm-table-cell">Foto</th>
                            {{#if (eq usuario.tipoUsuario 'A')}}
                            <th class="text-center">Ações</th>
                            {{/if}}
                        </tr>
                    </thead>
                    <tbody>

                        {{#each listagem.docs}}
                        <tr>
                            <!--<th>{{_id}}</th>-->
                            <td>{{nomeProfessor}}</td>
                            
                            <td class="d-sm-table-cell">{{conteudo}}</td>
                            <td class="d-lg-table-cell">{{materia}}</td>
                            <td class="d-lg-table-cell">{{paginas}}</td>
                            <td class="d-lg-table-cell">{{moment createdAt 'DD/MM/YYYY'}}</td>
                            <!--  <td class="d-lg-table-cell"><a href={{url}} target="_blank"> <img class="img-fluid ml-3" style="width: 50px;" src="{{url}}"> </a>  -->
                            <td class="d-lg-table-cell">
                                
                                <div class="tz-gallery">
                                    <a class="lightbox" href="{{url}}">
                                        <img class="img-fluid ml-3" style="width: 50px;" src="{{url}}" border="0"
                                            alt="{{conteudo}}" />
                                    </a>
                                </div>
                                
                            </td>
                            <td class="text-center">
                                <span class="d-none d-md-block">
                                    <a href="/listagem/del-imagem/{{_id}}" class="btn btn-danger btn-sm">Excluir</a>
                                </span>


                                <div class="dropdown d-block d-md-none">
                                    <button class="btn btn-primary dropdown-toggle btn-sm" type="button"
                                        id="acoesListar" data-toggle="dropdown" aria-haspopup="true"
                                        aria-expanded="false">
                                        Ações
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                                        <a class="dropdown-item" href="/listagem/del-imagem/{{_id}}">Excluir</a>
                                    </div>
                                </div>
                            </td>



                        </tr>

                        {{/each}}
                    </tbody>
                </table>
                <nav aria-label="paginacao">
                    <ul class="pagination pagination-sm justify-content-center">
                        {{#if listagem.hasPrevPage}}
                        <li class="page-item">
                            <a class="page-link" href="/listagem/list-listagem" tabindex="-1">Primeira</a>
                        </li>
                        <li class="page-item"><a class="page-link"
                                href="/listagem/list-listagem?page={{listagem.prevPage}}">{{listagem.prevPage}}</a></li>
                        {{else}}
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">Primeira</a>
                        </li>
                        {{/if}}

                        <li class="page-item active">
                            <a class="page-link" href="#">{{listagem.page}}</a>
                        </li>

                        {{#if listagem.hasNextPage}}
                        <li class="page-item ">
                            <a class="page-link"
                                href="/listagem/list-listagem?page={{listagem.nextPage}}">{{listagem.nextPage}}</a>
                        </li>

                        <li class="page-item ">
                            <a class="page-link" href="/listagem/list-listagem?page={{listagem.totalPages}}">Proxima</a>
                        </li>
                        {{else}}
                        <li class="page-item disabled">
                            <a class="page-link" href="#">Última</a>
                        </li>
                        {{/if}}
                    </ul>
                </nav>

            </div>
        </div>
    </div>
</div>